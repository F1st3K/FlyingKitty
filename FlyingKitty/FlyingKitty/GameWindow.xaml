<Window x:Class="FlyingKitty.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlyingKitty"
        mc:Ignorable="d"
        Width="560" Height="720" 
        MinWidth="560" MaxWidth="560"
        MinHeight="720" MaxHeight="720"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="Flying Kitty" 
        KeyDown="KeyDownEvent" Closed="Window_Closed"
        >
    <Grid>
        <Canvas Width="560" Height="700"
                Name="MainCanvas"
                Background="LightSkyBlue"
                Focusable="True"
                >
        </Canvas>
        <Button x:Name="Back" Content="в меню" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="75" Panel.ZIndex="999999999" Click="BackButton" Margin="10,14,0,0"/>
        <Button x:Name="Restart" Content="заново" Canvas.Left="10" Canvas.Top="45" Height="30" Width="75" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="999999999" Margin="10,49,0,0"/>
    </Grid>
</Window>
